{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "baseUrl": "./src",
        "paths": {
            "@models/*" : [
                "../packages/models/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "client",
        "./**/__tests__/*"
    ]
}