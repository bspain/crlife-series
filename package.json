{
  "name": "crlife-series-server",
  "version": "1.0.0",
  "description": "Crossroads Church Discipleship Server",
  "main": "dist/main.js",
  "repository": "git@github.com:bspain/crlife-series.git",
  "author": "Benjamin Spain <benjamin@thespains.net>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --fix --ext .ts src/",
    "start": "node -r ts-node/register ./src/main.ts",
    "start:debug": "node --inspect-brk -r ts-node/register ./src/main.ts",
    "dev": "APP_ENV=development DEBUG=app* node -r ts-node/register ./src/main.ts",
    "dev:watch": "nodemon",
    "packclient": "node ./util/packclient.js",
    "verify": "yarn lint && yarn build"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "client",
      ".git",
      "node_modules"
    ],
    "ext": "ts",
    "watch": [
      "src"
    ],
    "exec": "yarn dev"
  },
  "dependencies": {
    "appfig": "^1.0.0",
    "cheerio": "^1.0.0-rc.3",
    "express": "^4.17.1",
    "ncp": "^2.0.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.13",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.2",
    "@types/nconf": "^0.10.0",
    "@types/node": "^12.12.6",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.2"
  }
}
